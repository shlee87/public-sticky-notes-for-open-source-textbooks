{
  "name": "StickIT",
  "description": "Sticky Notes On Open Source Textbooks",
  "homepage_url": "https://github.com/llagerlof/fresh-chrome-extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_title": "execute.js will run (watch the Chrome DevTools' console)",
    "default_icon": "icons/Picture2.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "js": [
        "contentScript-main.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    },
    {
      "run_at": "document_idle",
      "js": [
        "contentScript-secondary.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "contextMenus",
    "scripting"
  ],
  "icons": {
    "16": "icons/StickIT_16x16.png",
    "48": "icons/StickIT_48x48.png",
    "64": "icons/StickIT_64x64.png",
    "128": "icons/StickIT_128x128.png"
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}