{
  "name": "StickIT",
  "description": "Sticky Notes On Open Source Textbooks",
  "version": "0.0.1",
  "manifest_version": 3,
  "web_accessible_resources": [
    {
      "content_security_policy": {
        "extension_pages": "default-src 'self'; object-src 'self'"
      },
      "resources": [
        "dist/note.js",
        "aws-amplify/**",
        "@aws-amplify/auth/**",
        "*.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "action": {
    "default_title": "execute.js",
    "default_icon": "icons/Picture2.png",
    "default_popup": "Main-Page.html"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [
        "dist/login.js",
        "dist/note.js"
      ]
    },
    {
      "run_at": "document_start",
      "js": [
        "before.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    },
    {
      "run_at": "document_idle",
      "js": [
        "after.js",
        "node_modules/@webcomponents/custom-elements/custom-elements.min.js",
        "stickit-highlighter.js",
        "stickit-commenter.js",
        "content.js" 
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "icons": {
    "16": "icons/StickIT_16x16.png",
    "48": "icons/StickIT_48x48.png",
    "64": "icons/StickIT_64x64.png",
    "128": "icons/StickIT_128x128.png"
  },

  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}
